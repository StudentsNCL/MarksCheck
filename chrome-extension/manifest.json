{
  "manifest_version": 2,

  "name": "Marks Checker",
  "description": "Check Ness in the background for newly released marks",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },

  "permissions": [
    "background",
    "notifications",
    "storage",
    "webRequest",
    "https://ness.ncl.ac.uk/",
    "https://android.googleapis.com/",
    "https://hooks.slack.com/"
  ],
  
  "background": {
    "page": "background.html"
  }
}
